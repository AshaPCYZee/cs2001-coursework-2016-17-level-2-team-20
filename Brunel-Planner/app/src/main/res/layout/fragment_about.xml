<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="g20.brunelplanner.views.activities.fragments.AboutFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <TextView
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_title"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_devs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_devs"
            android:layout_below="@id/about_title"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_asha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_asha"
            android:layout_below="@id/about_devs"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_orion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_orion"
            android:layout_below="@id/about_name_asha"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_daniel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_daniel"
            android:layout_below="@id/about_name_orion"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_cristian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_cristian"
            android:layout_below="@id/about_name_manoj"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_shaun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_shaun"
            android:layout_below="@id/about_name_cristian"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_language"
            android:layout_below="@id/about_name_cristian"
            android:textColor="@color/black"
            android:layout_alignEnd="@+id/about_name_version" />

        <TextView
            android:id="@+id/about_name_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_java"
            android:layout_below="@id/about_name_language"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_description"
            android:layout_below="@id/about_name_java"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_descriptioninfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_descriptioninfo"
            android:layout_below="@id/about_name_description"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_version"
            android:layout_below="@id/about_name_descriptioninfo"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_versionnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_versionnumber"
            android:layout_below="@id/about_name_version"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_license"
            android:layout_below="@id/about_name_versionnumber"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_licensetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_licensetype"
            android:layout_below="@id/about_name_license"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/about_name_manoj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_name_manoj"
            android:textColor="@color/black"
            android:layout_below="@+id/about_name_daniel"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</FrameLayout>